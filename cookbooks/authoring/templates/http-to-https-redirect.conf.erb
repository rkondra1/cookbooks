# Redirects all requests on port 80 to 443 coming from any hosts matching .intuit.com .elb.amazonaws.com.
# This server block is usually accompanied by a default_server that support a healthcheck from port 80

server {
    listen 80 default_server;
    return 301 https://<%= node.default['wp-authoring']['wp']['hostname'] %>$request_uri;
}
