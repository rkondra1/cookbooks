
{
  "secrets": {
    "prefix": [ "shared","wp-authoring/web/e2e" ]
  },
  "splunk": {
    "inputs": {
      "index": "authoring_e2e",
      "fields": {
        "appname": "wp-authoring",
        "role": "web",
        "region": "us-west-2",
        "env": "e2e"
      }
    }
  },
  "wp-authoring":{
    "wp": {
      "dbName": "wp_e2e",
      "env": "e2e"
    }
  },

  "run_list": [
    "recipe[secrets]",
    "recipe[splunk]",
    "recipe[overrides::deploy_secrets]",
    "recipe[nginx::1.8.0-2]",
    "recipe[authoring::nginx]",
    "recipe[authoring::php-fpm]",
    "recipe[authoring::wp]",
    "recipe[authoring::start_server]"
  ]
}
