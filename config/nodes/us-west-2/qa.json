
{
  "secrets": {
    "prefix": [ "shared","wp-authoring/web/qa" ]
  },
  "splunk": {
    "inputs": {
      "index": "cms_qa_authoring_west2",
      "fields": {
        "appname": "wp-authoring",
        "role": "web",
        "region": "us-west-2",
        "env": "qa"
      }
    }
  },
  "wp-authoring":{
    "wp": {
      "dbName": "wp_qa",
      "env": "qa"
    }
  },

  "run_list": [
    "recipe[secrets]",
    "recipe[splunk]",
    "recipe[overrides::deploy_secrets]",
    "recipe[nginx::1.8.0-2]",
   "recipe[authoring]"
  ]
}
