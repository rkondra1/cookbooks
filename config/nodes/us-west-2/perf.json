
{
  "secrets": {
    "prefix": [ "shared","wp-authoring/web/perf" ]
  },
  "splunk": {
    "inputs": {
      "index": "cms_perf_authoring_west2",
      "fields": {
        "appname": "wp-authoring",
        "role": "web",
        "region": "us-west-2",
        "env": "perf"
      }
    }
  },
  "wp-authoring":{
    "wp": {
      "dbName": "wp_perf",
      "env": "perf"
    }  
  },
  "appdynamics_machine_agent":{
    "config":{
      "application_name":"ctg_ctgu_authoring_perf",
      "tier_name":"authoring_app_component:jms_location:aws_region:us-west-2"
    }
  },
  "appdynamics_java_agent":{
    "config":{
      "application_name":"ctg_ctgu_authoring_perf",
      "tier_name":"authoring_app_component:jms_location:aws_region:us-west-2"
    }
  },

  "deploy-jms-client":{
    "jms-java-options":{
      "JAVA_OPTS": "-DENV=perf_us-west-2 -javaagent:/opt/appdynamics/java_agent/javaagent.jar"
      
    }
  },

  "run_list": [
    "role[preproduction]",
    "recipe[secrets]",
    "recipe[splunk]",
    "recipe[overrides::deploy_secrets]",
    "recipe[authoring::nginx]",
    "recipe[appdynamics_machine_agent::4.2.12.1]",
    "recipe[appdynamics_machine_agent::config]",
    "recipe[appdynamics_java_agent::4.2.12.1]",
    "recipe[appdynamics_java_agent::config]",
    "recipe[authoring]"
  ]
}
